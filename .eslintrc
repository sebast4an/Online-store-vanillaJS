{
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "arrow-parens": ["as-needed", { "requireForBlockBody": true }],
    "prettier/prettier": ["error", { "singleQuote": true }]
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "parser": "babel-eslint"
}
